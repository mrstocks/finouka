
<% content_for :css do %>
   <%= stylesheet_link_tag "style" %>
   <%= stylesheet_link_tag "dog" %>
   <%= stylesheet_link_tag "elastislide" %>
<% end %>


<% content_for :javascript do %>
   <%= javascript_include_tag "jquery-1.8.1" %>
   <%= javascript_include_tag "jquery.tmpl.min" %>
   <%= javascript_include_tag "jquery.easing.1.3" %>
   <%= javascript_include_tag "jquery.elastislide" %>
   <%= javascript_include_tag "gallery" %>
<% end %>

<% content_for :menu do %>
   <li class="active"><a href="/dogue-allemand/<%= @dog.slug %>">Dogue Allemand, <%= @dog.title %></a></li>
<% end %>


<% content_for :js_head do %>
		<noscript>
			<style>
				.es-carousel ul{
					display:block;
				}
			</style>
		</noscript>
		<script id="img-wrapper-tmpl" type="text/x-jquery-tmpl">	
			<div class="rg-image-wrapper">
				{{if itemsCount > 1}}
					<div class="rg-image-nav">
						<a href="#" class="rg-image-nav-prev">Previous Image</a>
						<a href="#" class="rg-image-nav-next">Next Image</a>
					</div>
				{{/if}}
				<div class="rg-image"></div>
				<div class="rg-loading"></div>
				<div class="rg-caption-wrapper">
					<div class="rg-caption" style="display:none;">
						<p></p>
					</div>
				</div>
			</div>
		</script>

<% end %>

<div class="marketing">
   <h1><%= @dog.title %></h1>
   <p class="marketing-byline"><%= @dog.introduction %></p>
</div>


<div class="row-fluid">
   <div class="span8">
      <%=raw @dog.subtitle %>
      <%= image_tag @dog.avatartwo.normal.url.to_s, :class => "img-rounded" %>
      <hr />
      <small>
         <%=raw @dog.content_left %>
      </small>
   </div>


   <div class="span4">
      <small>
         <%=raw @dog.content_right %>
      </small>
   </div>
</div>

<div class="row-fluid">
<div class="span12">

<div class="content">
   <div id="rg-gallery" class="rg-gallery">
      <div class="rg-thumbs">
         <!-- Elastislide Carousel Thumbnail Viewer -->
         <div class="es-carousel-wrapper">
            <div class="es-nav">
               <span class="es-nav-prev">Previous</span>
               <span class="es-nav-next">Next</span>
            </div>
            <div class="es-carousel">
               <ul>
                  <% @dog.dogpictures.each do |f| %>


                     <li><a href="#"><img src="<%= f.file.thumb %>" data-large="<%= f.file %>" alt="Dogue Allemand, <%= @dog.title %>. <%= f.title %> <%= f.intro %>" data-description="<%= f.title %> = <%= f.intro %>" /></a></li>
                  <% end %>
               </ul>
            </div>
         </div>
         <!-- End Elastislide Carousel Thumbnail Viewer -->
      </div>
   </div>
</div>

</div>
</div>


