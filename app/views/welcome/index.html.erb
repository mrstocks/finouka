<% content_for :javascript do %>
   <%= javascript_include_tag "jquery-1.8.1" %>
   <%= javascript_include_tag "bootstrap" %>
<% end %>

   
   <div class="marketing">
   <h1>Petit élevage dans la mayenne.</h1>
   <p class="marketing-byline">Donc plein de câlins pour eux.</p>
</div>

<hr class="soften">


